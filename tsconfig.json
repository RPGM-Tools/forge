{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"compilerOptions": {
		"noImplicitOverride": true,
		"lib": [
			"ES2020",
			"DOM",
		],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"types": [
			"vite/client"
		],
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"**/*.ts"
	],
}
